<% if (title) { %>
    <h1 id="login-title"><%= title %></h1>
<% } else {
      res.redirect('/')
    } %>


<div class="flash-message-container">
    <%- messages() %>
</div>


<% if (errors) { %>
    <ul class="login-flash-errors">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <%- messages() %>
<% } %>


<form id="loginForm" action="/account/login" method="post">
    <label for="email">Email:</label>
    <input type="email" id="email" name="account_email" required placeholder="Enter your email address" value="<%= locals.account_email %>"><br><br>

    <label for="password">Password:</label>
    <input type="password" id="password" name="account_password" required placeholder="Enter your password"><br><br>

    <input type="submit" value="Login">
    <p>Don't have an account? <a class="register-link" href="/account/register">Register here</a></p>
</form>

